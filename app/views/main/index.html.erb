<p id="notice"><%= notice %></p>

<h1>Produk</h1>

<table class="table table-striped">
  <thead>
    <tr>
        <th colspan="6">
            asa
        </th>
    </tr>
    <tr>
      <th>Judul</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Price</th>
      <th>Kategori</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @produks.each do |produk| %>
      <tr>
        <td><%= produk.judul %></td>
        <td><%= produk.description %></td>
        <td><%= image_tag(produk.image_url,size: '100') %></td>
        <td><%= number_to_currency(produk.price,:unit=>"Rp.") %></td>
        <td><%= produk.kategori.kategori %></td>
        <td><%= button_to 'Add to Cart', line_items_path(produk_id: produk) %></td>
      </tr>
    <% end %>
    <tr>
      <td><%= will_paginate @produks %></td>
    </tr>
  </tbody>
</table>

<br>
