<p id="notice"><%= notice %></p>

<h1>Produk</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <td colspan="8">
        <div class="row">
          <div class="col-md-2">
        Cari Produk :
      </div>
        <div class="col-md-10">
        <%= form_tag toko_index_url, :method=>'get' do %>
        <p>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search", :judul=> nil %>
        </p>
      <% end %>
    </div>
    </div>
    </td>
    </tr>
    <tr>
      <th>Judul</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Price</th>
      <th>Kategori</th>
      <th colspan="3">
      </th>
    </tr>
  </thead>

  <tbody>

    <% @produks.each do |produk| %>
      <tr>
        <td><%= produk.judul %></td>
        <td><%= produk.description %></td>
        <td><%= image_tag(produk.image_url,size: '100') %></td>
        <td><%= number_to_currency(produk.price,:unit=>"Rp.") %></td>
        <td><%= produk.kategori.kategori %></td>
        <td><%= button_to 'Add to Cart', line_items_path(produk_id: produk) %></td>
      </tr>
    <% end %>
    <tr>
      <td colspan="9"><%= will_paginate @produks %></td>
    </tr>
  </tbody>
</table>

<br>
